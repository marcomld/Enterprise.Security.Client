@code {
    // --- VARIABLES DE ESTADO ---
    private List<RoleResponseDto> roles = new();
    private List<UserResponseDto> allUsers = new();
    private bool isLoading = true;
    private bool isProcessing = false;

    // Feedback
    private string? feedbackMessage;
    private bool isSuccessFeedback;

    // Modales
    private bool showCreateModal = false;
    private bool showPermissionsModal = false;
    private bool showAssignModal = false;

    // Modelos y Selecciones
    private CreateRoleDto newRoleModel = new();
    private RoleResponseDto? selectedRole;
    private RoleResponseDto? roleToDelete;
    private UserResponseDto? userToAction; // Usuario seleccionado para asignar/quitar

    private List<PermissionDto> rolePermissions = new();
    private List<UserResponseDto> filteredUsers = new(); // Lista base filtrada por lógica (tiene/no tiene rol)
    private string userSearchTerm = ""; // Para filtrar visualmente la lista base
    private bool isAssignMode = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            roles = await RoleService.GetAllAsync();
            allUsers = await UserService.GetAllAsync();
        }
        catch (Exception ex)
        {
            ShowError("Error cargando datos: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    // --- CREAR ROL ---
    private void OpenCreateRoleModal() { newRoleModel = new(); showCreateModal = true; }

    private async Task ExecuteCreateRole()
    {
        isProcessing = true;
        var error = await RoleService.CreateAsync(newRoleModel);
        if (string.IsNullOrEmpty(error))
        {
            ShowSuccess("Rol creado exitosamente.");
            CloseModals();
            await LoadData();
        }
        else ShowError(error);
        isProcessing = false;
    }

    // --- ELIMINAR ROL ---
    private void PromptDeleteRole(RoleResponseDto role) { roleToDelete = role; }

    private async Task ExecuteDeleteRole()
    {
        if (roleToDelete == null) return;
        var error = await RoleService.DeleteAsync(roleToDelete.Id);
        if (string.IsNullOrEmpty(error))
        {
            ShowSuccess("Rol eliminado.");
            roleToDelete = null;
            await LoadData();
        }
        else ShowError(error);
    }

    // --- PERMISOS ---
    private async Task OpenPermissionsModal(RoleResponseDto role)
    {
        selectedRole = role;
        showPermissionsModal = true;
        // Cargar permisos desde API
        rolePermissions = await RoleService.GetPermissionsAsync(role.Id);
    }

    private void TogglePermission(PermissionDto perm, object? val)
    {
        if (val is bool isChecked) perm.IsSelected = isChecked;
    }

    private async Task SavePermissions()
    {
        if (selectedRole == null) return;
        isProcessing = true;

        var dto = new UpdateRolePermissionsDto
        {
            RoleId = selectedRole.Id,
            PermissionIds = rolePermissions.Where(p => p.IsSelected).Select(p => p.PermissionId).ToList()
        };

        var error = await RoleService.UpdatePermissionsAsync(dto);
        if (string.IsNullOrEmpty(error))
        {
            ShowSuccess("Permisos actualizados.");
            CloseModals();
        }
        else ShowError(error);
        isProcessing = false;
    }

    // --- ASIGNAR USUARIOS ---
    private void OpenAssignModal(RoleResponseDto role, bool assignMode)
    {
        selectedRole = role;
        isAssignMode = assignMode;
        userSearchTerm = "";

        // Lógica de filtrado inicial
        if (assignMode)
            filteredUsers = allUsers.Where(u => u.Roles == null || !u.Roles.Contains(role.Name)).ToList();
        else
            filteredUsers = allUsers.Where(u => u.Roles != null && u.Roles.Contains(role.Name)).ToList();

        showAssignModal = true;
    }

    // Propiedad para el filtrado visual en tiempo real
    private IEnumerable<UserResponseDto> FilteredUsersDisplay =>
        string.IsNullOrWhiteSpace(userSearchTerm)
        ? filteredUsers
        : filteredUsers.Where(u => u.FullName.Contains(userSearchTerm, StringComparison.OrdinalIgnoreCase));

    private void SelectUserForAction(UserResponseDto user)
    {
        userToAction = user; // Esto dispara el segundo modal de confirmación
    }

    private async Task ExecuteUserAction()
    {
        if (selectedRole == null || userToAction == null) return;

        var dto = new AssignRoleDto(userToAction.Id, selectedRole.Name);
        string error;

        if (isAssignMode) error = await RoleService.AssignAsync(dto);
        else error = await RoleService.UnassignAsync(dto);

        if (string.IsNullOrEmpty(error))
        {
            ShowSuccess(isAssignMode ? "Usuario asignado." : "Usuario removido.");
            userToAction = null;
            CloseModals(); // Cerramos todo para forzar recarga limpia
            await LoadData();
        }
        else ShowError(error);
    }


    // --- HELPERS ---
    private void CloseModals()
    {
        showCreateModal = false;
        showPermissionsModal = false;
        showAssignModal = false;
        roleToDelete = null;
        userToAction = null;
    }

    private void ShowSuccess(string msg) { feedbackMessage = msg; isSuccessFeedback = true; }
    private void ShowError(string msg) { feedbackMessage = msg; isSuccessFeedback = false; }
}