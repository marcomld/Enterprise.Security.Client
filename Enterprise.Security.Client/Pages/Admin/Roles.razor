@page "/roles"
@using Enterprise.Security.Client.Core.Common
@using Enterprise.Security.Client.Core.DTOs.Roles
@using Enterprise.Security.Client.Core.DTOs.Users
@using Enterprise.Security.Client.Core.Interfaces
@inject IRoleService RoleService
@inject IUserService UserService
@inject IJSRuntime JS

@attribute [Authorize(Policy = Permissions.Roles.View)]

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">Roles y Permisos</h2>
            <p class="text-muted mb-0">Define los niveles de acceso y seguridad del sistema.</p>
        </div>
        <AuthorizeView Policy="@Permissions.Roles.Manage">
            <Authorized>
                <button class="btn btn-primary shadow-sm d-flex align-items-center gap-2 px-4 py-2" @onclick="OpenCreateRoleModal">
                    <i class="bi bi-shield-plus"></i>
                    <span>Nuevo Rol</span>
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (!string.IsNullOrEmpty(feedbackMessage))
    {
        <div class="alert @(isSuccessFeedback ? "alert-success" : "alert-danger") alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi @(isSuccessFeedback ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill") fs-4 me-3"></i>
                <div>
                    <strong>@(isSuccessFeedback ? "¡Operación Exitosa!" : "Atención")</strong> @feedbackMessage
                </div>
            </div>
            <button type="button" class="btn-close" @onclick="() => feedbackMessage = null"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5 my-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-3 text-muted fw-medium">Cargando roles...</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var role in roles)
            {
                // Calculamos usuarios (Idealmente esto vendría del Backend para performance, pero lo mantenemos aquí por ahora)
                var userCount = allUsers.Count(u => u.Roles != null && u.Roles.Contains(role.Name));

                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm role-card">

                        <div class="card-header border-0 bg-transparent pt-4 pb-0 px-4 d-flex justify-content-between align-items-start">
                            <div class="d-flex align-items-center gap-3">
                                <div class="role-icon-box">
                                    <i class="bi bi-shield-lock-fill fs-4 text-white"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold text-dark mb-0">@role.Name</h5>
                                    <div class="d-flex gap-2 mt-1">
                                        @if (role.Name == "Admin")
                                        {
                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle">Sistema</span>
                                        }
                                        else if (role.Name == "User")
                                        {

                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Default</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-info-subtle text-info border border-info-subtle text-dark">Personalizado</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            @if (role.Name != "Admin" && role.Name != "User")
                            {
                                <AuthorizeView Policy="@Permissions.Roles.Manage">
                                    <Authorized Context="authContext">
                                        <button class="btn btn-link text-muted p-0" @onclick="() => PromptDeleteRole(role)" title="Eliminar Rol">
                                            <i class="bi bi-trash fs-5 hover-danger"></i>
                                        </button>
                                    </Authorized>
                                </AuthorizeView>
                            }
                        </div>

                        <div class="card-body px-4 py-3">
                            <p class="text-muted small mb-3">@role.Description</p>

                            <div class="d-flex justify-content-between align-items-center p-2 rounded bg-light border">
                                <span class="small fw-bold text-secondary text-uppercase"><i class="bi bi-people me-2"></i>Usuarios</span>
                                <span class="badge bg-white text-dark border shadow-sm rounded-pill px-3">
                                    @userCount
                                </span>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-0 px-4 pb-4 pt-0">
                            <div class="d-grid gap-2">
                                <AuthorizeView Policy="@Permissions.Roles.Manage">
                                    <Authorized Context="authContext">
                                        <button class="btn btn-outline-primary btn-sm fw-medium d-flex align-items-center justify-content-center gap-2"
                                                @onclick="() => OpenPermissionsModal(role)">
                                            <i class="bi bi-key"></i> Gestionar Permisos
                                        </button>
                                    </Authorized>
                                </AuthorizeView>

                                <AuthorizeView Policy="@Permissions.Roles.Assign">
                                    <Authorized Context="authContext">
                                        <div class="btn-group w-100" role="group">
                                            <button type="button" class="btn btn-outline-success btn-sm fw-medium w-50"
                                                    @onclick="() => OpenAssignModal(role, true)">
                                                <i class="bi bi-person-plus"></i> Asignar
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary btn-sm fw-medium w-50"
                                                    @onclick="() => OpenAssignModal(role, false)"
                                                    disabled="@(userCount == 0)">
                                                <i class="bi bi-person-dash"></i> Quitar
                                            </button>
                                        </div>
                                    </Authorized>
                                </AuthorizeView>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showCreateModal)
{
    <div class="modal fade show d-block backdrop-blur" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content shadow-lg border-0 rounded-4">
                <div class="modal-header border-bottom-0 pb-0">
                    <h5 class="modal-title fw-bold text-dark">Nuevo Rol</h5>
                    <button type="button" class="btn-close" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body p-4">
                    <EditForm Model="@newRoleModel" OnValidSubmit="ExecuteCreateRole">
                        <DataAnnotationsValidator />
                        <div class="form-floating mb-3">
                            <InputText id="roleName" class="form-control" @bind-Value="newRoleModel.RoleName" placeholder="Nombre" />
                            <label for="roleName">Nombre del Rol</label>
                            <ValidationMessage For="@(() => newRoleModel.RoleName)" />
                        </div>
                        <div class="form-floating mb-3">
                            <InputText id="roleDesc" class="form-control" @bind-Value="newRoleModel.Description" placeholder="Descripción" />
                            <label for="roleDesc">Descripción</label>
                            <ValidationMessage For="@(() => newRoleModel.Description)" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary shadow-sm" disabled="@isProcessing">
                                @(isProcessing ? "Creando..." : "Crear Rol")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showPermissionsModal && selectedRole != null)
{
    <div class="modal fade show d-block backdrop-blur" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg modal-dialog-scrollable">
            <div class="modal-content shadow-lg border-0 rounded-4">
                <div class="modal-header border-bottom-0 bg-light">
                    <div>
                        <h5 class="modal-title fw-bold text-dark">Configurar Permisos</h5>
                        <p class="text-muted small mb-0">Rol: <span class="fw-bold text-primary">@selectedRole.Name</span></p>
                    </div>
                    <button type="button" class="btn-close" @onclick="CloseModals"></button>
                </div>

                <div class="modal-body p-4">
                    @if (rolePermissions == null || !rolePermissions.Any())
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary spinner-border-sm" role="status"></div>
                            <span class="ms-2 text-muted">Cargando permisos...</span>
                        </div>
                    }
                    else
                    {
                        <div class="row g-3">
                            @foreach (var group in rolePermissions.GroupBy(p => p.Module))
                            {
                                <div class="col-md-6">
                                    <div class="card h-100 border bg-light-subtle">
                                        <div class="card-header bg-transparent fw-bold text-uppercase small text-muted border-bottom-0 d-flex justify-content-between">
                                            <span>@group.Key</span>
                                            <span class="badge bg-secondary rounded-pill">@group.Count()</span>
                                        </div>
                                        <div class="card-body pt-0">
                                            @foreach (var perm in group)
                                            {
                                                <div class="form-check form-switch my-2">
                                                    <input class="form-check-input" type="checkbox"
                                                           id="perm_@perm.PermissionId"
                                                           checked="@perm.IsSelected"
                                                           @onchange="@(e => TogglePermission(perm, e.Value))">
                                                    <label class="form-check-label lh-1" for="perm_@perm.PermissionId">
                                                        <span class="fw-semibold d-block text-dark" style="font-size: 0.9rem;">@perm.Code</span>
                                                        <small class="text-muted" style="font-size: 0.75rem;">@perm.Description</small>
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <div class="modal-footer border-top-0 pt-0 pb-4 px-4 bg-light">
                    <button type="button" class="btn btn-light text-muted" @onclick="CloseModals">Cancelar</button>
                    <button type="button" class="btn btn-primary px-4 shadow-sm" @onclick="SavePermissions" disabled="@isProcessing">
                        @(isProcessing ? "Guardando..." : "Guardar Cambios")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@if (showAssignModal && selectedRole != null)
{
    <div class="modal fade show d-block backdrop-blur" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg border-0 rounded-4">
                <div class="modal-header border-bottom-0 pb-0">
                    <div>
                        <h5 class="modal-title fw-bold text-dark">@(isAssignMode ? "Asignar Usuarios" : "Remover Usuarios")</h5>
                        <p class="text-muted small mb-0">Rol: <span class="fw-bold text-primary">@selectedRole.Name</span></p>
                    </div>
                    <button type="button" class="btn-close" @onclick="CloseModals"></button>
                </div>

                <div class="modal-body p-4">
                    @if (filteredUsers.Any())
                    {
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="Buscar en la lista..." @bind="userSearchTerm" @bind:event="oninput" />
                        </div>

                        <div class="list-group list-group-flush border rounded-3 overflow-auto custom-scroll" style="max-height: 250px;">
                            @foreach (var user in FilteredUsersDisplay)
                            {
                                <button type="button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3"
                                        @onclick="() => SelectUserForAction(user)">
                                    <div>
                                        <div class="fw-semibold text-dark">@user.FullName</div>
                                        <div class="small text-muted">@user.Email</div>
                                    </div>
                                    <i class="bi bi-chevron-right text-muted"></i>
                                </button>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 bg-light rounded-3">
                            <i class="bi bi-info-circle text-muted fs-4 mb-2 d-block"></i>
                            <p class="text-muted small mb-0">
                                @(isAssignMode ? "Todos los usuarios ya tienen este rol." : "Nadie tiene este rol asignado.")
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@if (userToAction != null && selectedRole != null)
{
    <div class="modal fade show d-block backdrop-blur" tabindex="-1" style="z-index: 1060;">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content shadow rounded-4 border-0">
                <div class="modal-body text-center p-4">
                    <div class="mb-3">
                        <div class="rounded-circle @(isAssignMode ? "bg-success-subtle text-success" : "bg-warning-subtle text-warning") d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi @(isAssignMode ? "bi-person-plus-fill" : "bi-person-dash-fill") fs-2"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold">¿Confirmar?</h5>
                    <p class="text-muted small">
                        @(isAssignMode ? "Asignarás" : "Quitarás") el rol <strong>@selectedRole.Name</strong> <br> al usuario <strong>@userToAction.FullName</strong>.
                    </p>
                    <div class="d-grid gap-2 mt-4">
                        <button class="btn @(isAssignMode ? "btn-success" : "btn-warning")" @onclick="ExecuteUserAction">Sí, Confirmar</button>
                        <button class="btn btn-link text-decoration-none text-muted btn-sm" @onclick="() => userToAction = null">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (roleToDelete != null)
{
    <div class="modal fade show d-block backdrop-blur" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content shadow rounded-4 border-0">
                <div class="modal-body text-center p-4">
                    <div class="mb-3">
                        <div class="rounded-circle bg-danger-subtle text-danger d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-trash fs-2"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold">¿Eliminar Rol?</h5>
                    <p class="text-muted small">
                        Se eliminará <strong>@roleToDelete.Name</strong> y se revocará a todos los usuarios.
                    </p>
                    <div class="d-grid gap-2 mt-4">
                        <button class="btn btn-danger" @onclick="ExecuteDeleteRole">Sí, Eliminar</button>
                        <button class="btn btn-link text-decoration-none text-muted btn-sm" @onclick="() => roleToDelete = null">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

