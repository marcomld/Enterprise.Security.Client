@page "/audit-logs"
@using Enterprise.Security.Client.Core.DTOs.Audit
@using Enterprise.Security.Client.Core.Interfaces
@inject IAuditLogService AuditService
@attribute [Authorize(Policy = Permissions.Audits.View)]

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="bi bi-shield-check me-2"></i>Auditoría</h2>

        @* Barra de Búsqueda *@
        <div class="input-group" style="max-width: 400px;">
            <input type="text" class="form-control"
                   placeholder="Buscar acción, entidad o usuario..."
                   @bind="searchText"
                   @bind:event="oninput"
                   @onkeyup="HandleSearch" />
            <button class="btn btn-primary" @onclick="LoadLogs">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Fecha</th>
                            <th>Acción</th>
                            <th>Entidad</th>
                            <th>Usuario ID</th>
                            <th>Detalles</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (isLoading)
                        {
                            <tr><td colspan="5" class="text-center p-4"><div class="spinner-border text-primary"></div></td></tr>
                        }
                        else if (logs == null || !logs.Any())
                        {
                            <tr><td colspan="5" class="text-center p-4 text-muted">No se encontraron registros.</td></tr>
                        }
                        else
                        {
                            @foreach (var log in logs)
                            {
                                <tr>
                                    <td class="small fw-bold">@log.CreatedAt.ToLocalTime().ToString("dd/MM/yy HH:mm")</td>
                                    <td>
                                        @if (log.Action.Contains("Delete") || log.Action.Contains("Fail"))
                                        {
                                            <span class="badge bg-danger">@log.Action</span>
                                        }
                                        else if (log.Action.Contains("Create") || log.Action.Contains("Success") || log.Action.Contains("Assign"))
                                        {

                                            <span class="badge bg-success">@log.Action</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-info text-dark">@log.Action</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@log.Entity</span>
                                        @if (!string.IsNullOrEmpty(log.EntityId))
                                        {
                                            <small class="text-muted ms-1">(@log.EntityId)</small>
                                        }
                                    </td>
                                    <td class="small text-muted text-truncate" style="max-width: 150px;" title="@log.UserId">
                                        @log.UserId
                                    </td>
                                    <td class="small text-truncate" style="max-width: 300px;" title="@log.AdditionalData">
                                        @log.AdditionalData
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted small">
            Mostrando los últimos registros (Máx 200). Usa el buscador para filtrar.
        </div>
    </div>
</div>

@code {
    private List<AuditLogResponseDto>? logs;
    private string searchText = "";
    private bool isLoading = false;
    private System.Threading.Timer? _debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadLogs();
    }

    private async Task LoadLogs()
    {
        isLoading = true;
        try
        {
            logs = await AuditService.GetLogsAsync(searchText);
        }
        finally
        {
            isLoading = false;
        }
    }

    // Búsqueda con "Debounce" (espera a que dejes de escribir para buscar)
    private void HandleSearch(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            _debounceTimer?.Dispose();
            _ = LoadLogs();
            return;
        }

        _debounceTimer?.Dispose();
        _debounceTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () => await LoadLogs());
        }, null, 500, System.Threading.Timeout.Infinite);
    }
}