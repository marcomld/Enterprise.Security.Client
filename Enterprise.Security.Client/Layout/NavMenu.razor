@using Microsoft.AspNetCore.Components.Authorization
@using Enterprise.Security.Client.Core.Common

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="">
            <i class="bi bi-shield-lock-fill text-primary"></i>
            <span class="fw-bold tracking-tight">Enterprise Sec</span>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.Users.View">
            <div class="nav-item-header px-3 mt-3 mb-1 text-uppercase small text-muted fw-bold" style="font-size: 0.75rem;">
                Administración
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users">
                    <i class="bi bi-people me-2"></i> Usuarios
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.Roles.View">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="roles">
                    <i class="bi bi-key me-2"></i> Roles y Permisos
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.Audits.View">
            <div class="nav-item-header px-3 mt-3 mb-1 text-uppercase small text-muted fw-bold" style="font-size: 0.75rem;">
                Sistema
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="audit-logs">
                    <i class="bi bi-journal-text me-2"></i> Auditoría
                </NavLink>
            </div>
        </AuthorizeView>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}