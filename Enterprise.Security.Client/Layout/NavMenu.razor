@using Microsoft.AspNetCore.Components.Authorization
@using Enterprise.Security.Client.Core.Common

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="">
            <i class="bi bi-shield-lock-fill text-primary"></i>
            <span class="fw-bold tracking-tight">Enterprise Sec</span>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        @* --- SOLO ADMIN: DASHBOARD --- *@
        <AuthorizeView Roles="Admin">
            <div class="nav-item px-3 mt-2">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </NavLink>
            </div>
        </AuthorizeView>

        @* --- SECCIÓN TIENDA (Para Clientes o cualquier logueado) --- *@
        <AuthorizeView>
            <Authorized>
                <div class="nav-item-header px-3 mt-3 mb-1 text-uppercase small text-muted fw-bold" style="font-size: 0.75rem;">
                    Mi Tienda
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="catalog">
                        <i class="bi bi-shop me-2"></i> Catálogo
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="cart">
                        <i class="bi bi-cart3 me-2"></i> Carrito
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="my-orders">
                        <i class="bi bi-bag-check me-2"></i> Mis Pedidos
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.Invoices.ViewMy">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="my-invoices">
                    <i class="bi bi-receipt me-2"></i> Mis Facturas
                </NavLink>
            </div>
        </AuthorizeView>

        @* --- SECCIÓN VENTAS (Para Supervisores y Vendedores) --- *@
        <AuthorizeView Policy="@Permissions.Orders.Approve">
            <div class="nav-item-header px-3 mt-3 mb-1 text-uppercase small text-muted fw-bold" style="font-size: 0.75rem;">
                Ventas (B2B)
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="manage-orders">
                    <i class="bi bi-clipboard-check me-2"></i> Gestión Pedidos
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.Invoices.ViewAll">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="manage-invoices">
                    <i class="bi bi-wallet2 me-2"></i> Ingresos / Facturas
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.Invoices.CreateDirect">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="direct-sale">
                    <i class="bi bi-shop-window me-2"></i> Punto de Venta
                </NavLink>
            </div>
        </AuthorizeView>

        @* --- SECCIÓN INVENTARIO --- *@
        <AuthorizeView Policy="@Permissions.Categories.Edit"> <div class="nav-item-header px-3 mt-3 mb-1 text-uppercase small text-muted fw-bold" style="font-size: 0.75rem;">
                Inventario
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="categories">
                    <i class="bi bi-folder me-2"></i> Categorías
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.Products.Edit"> <div class="nav-item px-3">
                <NavLink class="nav-link" href="products">
                    <i class="bi bi-box-seam me-2"></i> Productos
                </NavLink>
            </div>
        </AuthorizeView>

        @* --- SECCIÓN ADMINISTRACIÓN --- *@
        <AuthorizeView Policy="@Permissions.Users.Edit">
            <div class="nav-item-header px-3 mt-3 mb-1 text-uppercase small text-muted fw-bold" style="font-size: 0.75rem;">
                Administración
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users">
                    <i class="bi bi-people me-2"></i> Usuarios
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.Roles.View">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="roles">
                    <i class="bi bi-key me-2"></i> Roles y Permisos
                </NavLink>
            </div>
        </AuthorizeView>

        @* --- SECCIÓN SISTEMA --- *@
        <AuthorizeView Policy="@Permissions.Audits.View">
            <div class="nav-item-header px-3 mt-3 mb-1 text-uppercase small text-muted fw-bold" style="font-size: 0.75rem;">
                Sistema
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="audit-logs">
                    <i class="bi bi-journal-text me-2"></i> Auditoría
                </NavLink>
            </div>
        </AuthorizeView>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;
}